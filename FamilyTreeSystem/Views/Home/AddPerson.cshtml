@model PersonVM
@{
    ViewData["Title"] = "AddPerson";
}

<h1>AddPerson</h1>
<div class="row">
    <div class="col-lg-12">
        <form action="AddPerson" method="post" id="addForm">
            <div class="row">

                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Select Parents</label>
                        <select class="form-control" name="ParentId" asp-items="@(Model.Parents)">
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" name="FirstName" value="" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control" name="LastName" value="" />
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label>Date of Birth</label>
                        <input type="date" class="form-control" name="DOB" value="" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <button type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>